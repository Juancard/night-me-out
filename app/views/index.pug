extends skeleton.pug

block content
  header
    h1 Plans Tonight?
    .index-icons
      span.glyphicon.glyphicon-map-marker
      span.glyphicon.glyphicon-glass
      span.glyphicon.glyphicon-globe
    h4 See which bars are hoppin' tonight and RSVP ahead of time!
  br
  form.row
    .input-group.col-md-offset-3.col-md-6
      input#toSearch.form-control.input-lg(type="text", placeholder="Search for...")
      span.input-group-btn
        button#searchBars.btn.btn-lg.btn-default(type="submit")
          span.glyphicon.glyphicon-search
  br
  hgroup#searchStatus.mb20(hidden='')
    h1 Search Results
    h2.lead
      strong.text-danger 3
      |  results were found for the search for
      strong.text-danger  Lorem
  section#barsFound.col-xs-12.col-sm-6.col-md-12
    //ARTICLES LOADED HERE dynamically

block append js
  script(src='/controllers/loadBars.client.js')
