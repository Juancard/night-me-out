extends skeleton.pug

block content
  header
    h1 Plans Tonight?
    .index-icons
      span.glyphicon.glyphicon-map-marker
      span.glyphicon.glyphicon-glass
      span.glyphicon.glyphicon-globe
    h4 See which bars are hoppin' tonight and RSVP ahead of time!
  br
  form.row
    .input-group.col-md-offset-3.col-md-6
      input#toSearch.form-control.input-lg(type="text", placeholder="New York")
      span.input-group-btn
        button#searchBars.btn.btn-lg.btn-default(type="submit")
          span.glyphicon.glyphicon-search
  br
  #searchResults

block append js
  script(src='/controllers/bars.client.js')
